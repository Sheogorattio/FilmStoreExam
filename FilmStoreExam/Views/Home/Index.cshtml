@{
    ViewData["Title"] = "Все фильмы";
    var actors = ViewBag.Actors as List<Actor>;
}
@model IEnumerable<Product>

<h3 class="p-2 bg-primary text-white text-center">Фильмы</h3>

<div class="text-center">
    @Html.Partial("Pages", Model)

    @{
        ViewBag.searches = new string[] { "Name", "Category.Name" };
        ViewBag.sorts = new string[] { "Name", "Category.Name", "Rating" };
    }
    @Html.Partial("PageOptions", Model)
</div>

<div class="container">

    <div class="row">
        <div class="col fw-bold">Постер</div>
        <div class="col fw-bold">Название</div>
        <div class="col fw-bold">Категория</div>
        <div class="col fw-bold">Рейтинг</div>
        <div class="col fw-bold">Актёры</div>
        <div class="col"></div>
    </div>

    @foreach (Product product in Model)
    {
        <div class="row p-2">
            <div class="col">
                <a href="@product.ImdbUrl" target="_blank">
                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" />
                </a>
            </div>
            <div class="col">@product.Name</div>
            <div class="col">@product.Category.Name</div>
            <div class="col text-right">@product.Rating</div>
            <div class="col text-right">
                @foreach (var actorId in product.ActorId ?? new List<int>())
                {
                    var actor = actors.FirstOrDefault(p => p.Id == actorId);
                    if (actor != null)
                    {
                        <span>@actor.Name</span>
                        <br />
                    }
                }
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col">
                    <form asp-action="DeleteProduct" method="post">
                        <input type="hidden" name="Id" value="@product.Id">
                        <a asp-action="UpdateProduct" asp-route-id="@product.Id" class="btn btn-outline-primary">Редактировать</a>
                        <button type="submit" class="btn btn-outline-danger">Удалить</button>
                    </form>
                </div>
            }
        </div>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center p-2">
            <a asp-action="UpdateProduct" asp-route-id="0" class="btn btn-primary">Добавить</a>
        </div>
    }
</div>
